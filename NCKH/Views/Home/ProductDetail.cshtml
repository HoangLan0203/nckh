@{
    ViewData["Title"] = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";

}<!-- Product Details Section Begin -->
@model NCKH.Models.ChiTietSanPham
<section class="product-details spad">
    <div class="container">
        <div class="row">
            @*hien thu hinh anh san pham*@
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@Url.Content("~/Images/"+Model.HinhAnh)" alt="">
                    </div>
                    
                   
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.TenSanPham</h3>
                    <div class="product__details__rating">
                        @for (int i = 0; i < Model.Rate; i++)
                        {
                            <i class="fa fa-star"></i>
                        }
                        @for (int i = Model.Rate; i < 5; i++)
                        {
                            <i class="fa fa-star-o"></i>
                        }
                    </div>
                    <div class="product__details__price">@Model.Gia.ToString("C")</div>
                    <p>@Model.MoTa</p>

                    <div class="product__details__size">
                        <p>Chọn màu</p>
                        <ul>
                            @foreach (var size in Model.SanPhamSizes)
                            {
                                <li>@size.Size - @size.SoLuong in stock</li>
                            }
                        </ul>
                    </div>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">Thêm vào giỏ hàng</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    <ul>
                       
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
</section>
<!-- Product Details Section End -->